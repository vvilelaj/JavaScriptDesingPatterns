
@{
    ViewBag.Title = "Index";
}

<h2>SetInterval</h2>

<div class="row">
    <div class="col-md-12">
        <ul class="datos">
        </ul>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            var index = 0;
            setInterval(function () {
                index++;
                $.get('GetData?index=' + index.toString(), function (data, status, jqXHR) {
                    $('.datos').append('<li>' + data.Name + '</li>');
                });
            }, 500);
        }); 
    </script>
}